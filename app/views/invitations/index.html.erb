<h1>Listing invitations</h1>

<table>
  <tr>
    <th>User</th>
    <th>Invitee name</th>
    <th>Status</th>
    <th>Phone number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invitations.each do |invitation| %>
  <tr>
    <td><%= invitation.user_id %></td>
    <td><%= invitation.invitee_name %></td>
    <td><%= invitation.status %></td>
    <td><%= invitation.phone_number %></td>
    <td><%= link_to 'Show', invitation %></td>
    <td><%= link_to 'Edit', edit_invitation_path(invitation) %></td>
    <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

